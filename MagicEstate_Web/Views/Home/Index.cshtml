@using Microsoft.AspNetCore.Components
@model IEnumerable<MagicEsatate_Web.Models.Dto.EstateDTO>

<img class="d-block w-100" src="images/home/slide1.jpg" alt="">

<hr/>
<div class="row" style="--bs-gutter-x:0">
    @foreach (var estate in Model)
    {
            <div class="p-4 col-md-12 col-lg-6">
                <div class="row" style="border-radius:20px; border: 1px solid #ffffff">
                    <div class="col-4">
                        <img class="d-block w-100" style="border-radius:20px;" src="@estate.ImageUrl" alt="First slide">
                    </div>
                    <div class="col-8">
                            <p class="card-title text-warning" style="font-size:xx-large">@estate.Name</p>
                        <p class="card-text">
                        @((MarkupString)estate.Details)
                        </p>
                    </div>
                    <div class="col-12">
                        <div class="row pb-3 pt-2">
                            <div class="col-4">
                                <a href="" class="btn btn-success form-control btn-block">Book</a>
                            </div>
                            <div class="col-4">
                                    <span class="">Max Occupancy : @estate.Occupancy adults </span><br />
                                    <span class=" pt-1">Estate Size : @estate.Sqft sqft</span><br />
                            </div>
                            <div class="col-4">
                                <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                    =N=
                                    <span style="border-bottom:1px solid #ff6a00">
                                    @estate.Rate.ToString("c")
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    }
</div>
