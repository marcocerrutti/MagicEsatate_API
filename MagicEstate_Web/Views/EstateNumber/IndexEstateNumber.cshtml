@model IEnumerable<MagicEsatate_Web.Models.Dto.EstateNumberDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Estate Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="EstateNumber" asp-action="CreateEstateNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create new Estate Number</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                   Estate Name
                </th>
                <th>
                    Estate Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Estate.Name</td>
                        <td>@item.EstateNo</td>
                        <td>
                             <a asp-controller="EstateNumber" asp-action="UpdateEstateNumber" asp-route-estateId="@item.EstateNo" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                             <a asp-controller="EstateNumber" asp-action="DeleteEstateNumber" asp-route-estateId="@item.EstateNo" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
