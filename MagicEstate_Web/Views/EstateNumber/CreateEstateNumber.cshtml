@model MagicEstate_Web.Models.VM.EstateNumberCreateVM


<form asp-action="CreateEstateNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Estate</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="EstateNumber.EstateNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="EstateNumber.EstateNo" class="form-control" />
                <span asp-validation-for="EstateNumber.EstateNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="EstateNumber.EstateID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="EstateNumber.EstateID" class="form-select" asp-items="@Model.EstateList">
                    <option disabled selected>--Select Estate</option>
                </select>
                <span asp-validation-for="EstateNumber.EstateID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="EstateNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="EstateNumber.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="EstateNumber.SpecialDetails" class="text-danger"></span>
            </div>
             

            <div class="col-5 offset-2">
                <a asp-action="IndexEstate" asp-controller="Estate" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts{
        <partial name="_ValidationScriptsPartial"/>
}


